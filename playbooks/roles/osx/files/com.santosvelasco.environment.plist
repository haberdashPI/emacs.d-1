"http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.santosvelasco.environment</string>
    <key>ProgramArguments</key>
    <array>
      <string>sh</string>
      <string>-c</string>
